# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 2
indent_style = space
max_line_length = 80

[*.{py,rst,ini}]
indent_style = space
indent_size = 4

[*.{html,css,scss,json,yml,xml}]
indent_style = space
indent_size = 2

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[Makefile]
tab_width = 2
indent_style = tab

[nginx.conf]
indent_style = space
indent_size = 2

[*.{tf,tfvars}]
indent_size = 2
indent_style = space

[COMMIT_EDITMSG]
max_line_length = 0
